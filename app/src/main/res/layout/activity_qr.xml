<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QR">


    <TextView
            android:id="@+id/text_number_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/header_qr"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_font_size_35"
            android:layout_marginTop="@dimen/margin_top_qr"
    />

    <ImageView
            android:id="@+id/image_qr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/image_qr"
            android:layout_gravity="center"
            android:layout_below="@+id/text_number_qr"
            android:contentDescription="@string/activity_qr_description"/>

</RelativeLayout>