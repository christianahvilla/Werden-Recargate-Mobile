<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_margin5"
    android:layout_marginLeft="@dimen/card_margin5"
    android:layout_marginRight="@dimen/card_margin5"
    card_view:cardCornerRadius="@dimen/card_margin5">

    <LinearLayout
            android:id="@+id/layout_customer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customer_height50"
            android:layout_marginTop="@dimen/layout_margin15"
            android:layout_marginLeft="@dimen/layout_margin10"
            android:layout_marginRight="@dimen/layout_margin10"
            android:layout_marginBottom="@dimen/layout_margin15"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.3"
                android:tint="@color/primary"
                android:src="@drawable/ic_person_black_24dp"
                android:contentDescription="@string/customerimage"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/layout_margin8"
                android:layout_weight="1">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">
                <TextView
                        android:id="@+id/name_list"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_font_size_18"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                />

                <TextView
                        android:id="@+id/last_list"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/card_margin5"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_font_size_18"
                        android:textColor="@color/primary_text" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/number_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_font_size_18"
                        android:textColor="@color/secondary_text"
                        />

                <TextView
                        android:id="@+id/carrier_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_font_size_18"
                        android:textColor="@color/secondary_text" />

            </LinearLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/menuButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginStart="@dimen/layout_margin8"
                android:text="@string/threeP"
                android:layout_weight="3"
                android:textColor="@color/secondary_text"
                android:textAppearance="?android:textAppearanceLarge"/>

    </LinearLayout>

</android.support.v7.widget.CardView>