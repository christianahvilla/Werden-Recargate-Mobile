<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/layout_customer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/customer_height50"
            android:layout_marginTop="@dimen/layout_margin15"
            android:layout_marginLeft="@dimen/layout_margin10"
            android:layout_marginRight="@dimen/layout_margin10"
            android:layout_marginBottom="@dimen/layout_margin15"
            android:orientation="horizontal" android:baselineAligned="false">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/layout_margin8"
                android:layout_weight="1" tools:ignore="UselessParent">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">
                <TextView
                        android:id="@+id/copy_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_font_size_18"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                />

                <TextView
                        android:id="@+id/copy_last"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/card_margin5"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_font_size_18"
                        android:textColor="@color/primary_text" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/copy_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_font_size_18"
                        android:textColor="@color/secondary_text"
                />

                <TextView
                        android:id="@+id/copy_carrier"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_font_size_18"
                        android:textColor="@color/secondary_text" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>